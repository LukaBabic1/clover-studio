<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/default_window_margin"
        app:cardElevation="@dimen/message_card_view_elevation"
        app:cardCornerRadius="@dimen/message_card_view_corner_radius">

        <EditText
            android:id="@+id/fragment_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/fragment_message_edit_text_hint"/>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/fragment_message_button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/default_window_margin"
            android:text="@string/fragment_message_button_send_text"/>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/fragment_message_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>